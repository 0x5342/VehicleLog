<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vehicle_detail"
    style="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:textIsSelectable="true"
    tools:context="com.diversedistractions.vehiclelog.VehicleDetailFragment"
    android:orientation="vertical" >

    <android.support.v7.widget.AppCompatImageButton
        android:layout_width="120dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/vi_no_vehicle_image"
        android:id="@+id/vehicleImageButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">


        <TextView
            android:text="@string/model_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/yearLabelText"
            android:paddingRight="5dp"
            android:gravity="right"
            android:layout_weight="2" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/vehicleYearEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:text="@string/choose_model_year"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:text="@string/make"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/makeLabelText"
            android:layout_weight="2"
            android:paddingRight="5dp"
            android:gravity="right" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/makeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_the_make"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textStyle="normal|bold"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:text="@string/model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/modelLabelText"
            android:layout_weight="2"
            android:paddingRight="5dp"
            android:gravity="right" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/modelEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_the_model"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textStyle="normal|bold"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:text="@string/vin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vinLabelText"
            android:layout_weight="2"
            android:gravity="right"
            android:paddingRight="5dp" />

        <android.support.v7.widget.AppCompatEditText
            android:text="@string/enter_the_vin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vehicleVinEditText"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:text="@string/license_plate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/licensePlateLabelText"
            android:layout_weight="2"
            android:paddingRight="5dp"
            android:gravity="right" />

        <android.support.v7.widget.AppCompatEditText
            android:text="@string/enter_the_license_plate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vehicleLicensePlateEditText"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:text="@string/lp_renew_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LpRenewalDateLabelText"
            android:layout_weight="2"
            android:paddingRight="5dp"
            android:gravity="right" />

        <android.support.v7.widget.AppCompatEditText
            android:text="@string/choose_license_renewal_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vehicleLpRenewalDateEditText"
            android:inputType="date"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:singleLine="true" />
    </LinearLayout>

    <TextView
        android:text="@string/notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notesLabelText"
        android:layout_marginTop="5dp" />

    <android.support.v7.widget.AppCompatEditText
        android:text="@string/enter_notes_here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/border"
        android:id="@+id/vehNotesText"
        android:layout_weight="1"
        android:minLines="4"
        android:textStyle="normal|bold" />

</LinearLayout>
