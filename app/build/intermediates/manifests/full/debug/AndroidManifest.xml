<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.diversedistractions.vehiclelog"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.diversedistractions.vehiclelog.VehicleListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.diversedistractions.vehiclelog.VehicleDetailActivity"
            android:label="@string/title_vehicle_detail"
            android:parentActivityName="com.diversedistractions.vehiclelog.VehicleListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.diversedistractions.vehiclelog.VehicleListActivity" />
        </activity>
        <activity
            android:name="com.diversedistractions.vehiclelog.PreferencesActivity"
            android:parentActivityName="com.diversedistractions.vehiclelog.VehicleListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.diversedistractions.vehiclelog.VehicleListActivity" />
        </activity>

        <provider
            android:name="com.diversedistractions.vehiclelog.database.VehicleLogContentProvider"
            android:authorities="com.diversedistractions.vehiclelog.vehiclelogcontentprovider"
            android:exported="false" />
    </application>

</manifest>